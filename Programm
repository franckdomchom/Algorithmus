Funktion find_max(arr):
    max = arr[0]
    i = 1
    Solange i < Länge(arr):
        Wenn arr[i] > max:
            max = arr[i]
        Erhöhe i um 1
    Rückgabe max

def find_max(arr):
    // Initialisiere max mit dem ersten Element des Arrays

    max_value = arr[0]
    
    // Durchlaufe das Array ab dem zweiten Element

    for i in range(1, len(arr)):
        if arr[i] > max_value:
            max_value = arr[i]
    
    return max_value

// Beispiel-Array

array = [3, 5, 7, 2, 8, -1, 4, 10, 12]

// Finde das größte Element im Array

max_element = find_max(array)
print(f"Das größte Element im Array ist: {max_element}")

